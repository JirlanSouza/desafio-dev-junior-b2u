// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  password  String
  phone     String
  createdAt DateTime
  CarrAdd   CarAd[]
}

model CarAd {
  id                 String  @id
  ownerId            String
  owner              User    @relation(fields: [ownerId], references: [id])
  brand              String
  model              String
  manufactureYear    Int
  modelYear          Int
  fuel               String
  km                 Int
  price              Decimal
  eletricWindow      Boolean
  hidraulicSteenring Boolean
  eletricicSteenring Boolean
  automaticGearBox   Boolean
  airConditioning    Boolean
  airbag             Boolean
  alarm              Boolean
  eletricLock        Boolean
}
